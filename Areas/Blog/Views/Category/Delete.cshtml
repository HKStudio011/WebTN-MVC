@model WebTN_MVC.Models.Blog.Category

@{
    ViewData["Title"] = "Xoá chuyên mục";
}

<h1>@ViewData["Title"]</h1>

<h3>Có chắc muốn xoá?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xoá" class="btn btn-danger" />
        <a asp-action="Index">Danh sách chuyên mục Blog</a>
    </form>
</div>
