@model WebTN_MVC.Models.Product.CategoryProduct
@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Xoá chuyên mục";
}


<h3>Có chắc muốn xoá?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xoá" class="btn btn-danger" />
        <a asp-action="Index">Danh sách chuyên mục sản phẩm</a>
    </form>
</div>

@{
    _AdminSidebarService.SetActive("CategoryProduct", "Index", "Product");
}

@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}