@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Xoá Database";
}

<p class=" alert alert-danger">Bạn có chắc muốn xoá Database?</p>
<form method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a class="btn btn-primary" asp-action="Index">Thông tin Database</a>
    </div>
</form>

@{
    _AdminSidebarService.SetActive("DbManage", "Index", "Database");
}

@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}